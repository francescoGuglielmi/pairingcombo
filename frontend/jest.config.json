{
  "moduleFileExtensions": ["js", "json", "ts", "vue"],
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "testEnvironmentOptions": {
    "url": "http://localhost/",
    "customExportConditions": ["node", "node-addons"]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    ".*\\.(vue)$": "@vue/vue3-jest",
    "^.+\\.ts?$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}